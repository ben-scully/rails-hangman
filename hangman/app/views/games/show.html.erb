<h1>Hangman</h1>

<%= render 'game_information' %>

<% if @game.finished? %>
  <%= render 'game_result' %>
<% else %>
  <%= render 'make_guess' %>
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %>
<%= link_to 'Back', games_path %>

<p>
  <strong>Remove after testing:</strong>
  <%= @game.secret_word %>
</p>
